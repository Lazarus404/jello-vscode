{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Jello",
  "scopeName": "source.jello",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#atoms" },
    { "include": "#numbers" },
    { "include": "#operators" },
    { "include": "#functions" },
    { "include": "#builtin-types" },
    { "include": "#builtin-namespaces" },
    { "include": "#constants" },
    { "include": "#bitstrings" },
    { "include": "#punctuation" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.jello",
          "match": "//.*$"
        },
        {
          "name": "comment.block.jello",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.jello",
          "match": "\\b(if|else|do|while|for|break|continue|return|match|when|as|try|catch|throw|using|import|export|from|package)\\b"
        },
        {
          "name": "keyword.other.jello",
          "match": "\\b(fn|as)\\b"
        },
        {
          "name": "variable.language.jello",
          "match": "\\b(this)\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.jello",
          "match": "\\b(null|true|false)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.jello",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.jello",
              "match": "\\\\([\"\\\\/bfnrt]|u[0-9a-fA-F]{4})"
            }
          ]
        },
        {
          "name": "string.quoted.single.jello",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.jello",
              "match": "\\\\(['\\\\/bfnrt]|u[0-9a-fA-F]{4})"
            }
          ]
        }
      ]
    },
    "atoms": {
      "patterns": [
        {
          "name": "constant.other.symbol.jello",
          "match": ":[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.jello",
          "match": "\\b0[xX][0-9a-fA-F]+\\b"
        },
        {
          "name": "constant.numeric.binary.jello",
          "match": "\\b0[bB][01]+\\b"
        },
        {
          "name": "constant.numeric.octal.jello",
          "match": "\\b0[oO][0-7]+\\b"
        },
        {
          "name": "constant.numeric.float.jello",
          "match": "\\b[0-9]+\\.[0-9]+([eE][+-]?[0-9]+)?\\b"
        },
        {
          "name": "constant.numeric.integer.jello",
          "match": "\\b[0-9]+\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arrow.jello",
          "match": "->"
        },
        {
          "name": "keyword.operator.pipe.jello",
          "match": "\\|>"
        },
        {
          "name": "keyword.operator.spread.jello",
          "match": "\\.\\.\\.(?![a-zA-Z_])"
        },
        {
          "name": "keyword.operator.pin.jello",
          "match": "\\^(?![a-zA-Z_])"
        },
        {
          "name": "keyword.operator.assignment.jello",
          "match": ":=|="
        },
        {
          "name": "keyword.operator.comparison.jello",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.logical.jello",
          "match": "&&|\\|\\||!"
        },
        {
          "name": "keyword.operator.bitwise.jello",
          "match": "&|\\||<<|>>|~"
        },
        {
          "name": "keyword.operator.arithmetic.jello",
          "match": "\\+|-|\\*|/|%"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.jello",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        },
        {
          "name": "support.function.builtin.jello",
          "match": "\\b(print|println|assert|typeof|clone)\\b"
        }
      ]
    },
    "builtin-types": {
      "patterns": [
        {
          "name": "support.type.jello",
          "match": "\\b(Object|Array|String|Binary|Tuple|Cell)\\b"
        }
      ]
    },
    "builtin-namespaces": {
      "patterns": [
        {
          "name": "support.class.jello",
          "match": "\\b(System|Actor|Promise|Random|Crypto|File|Net)\\b"
        }
      ]
    },
    "bitstrings": {
      "patterns": [
        {
          "name": "string.other.bitstring.jello",
          "begin": "<%",
          "end": "%>",
          "patterns": [
            {
              "name": "keyword.operator.bitstring.jello",
              "match": "::"
            },
            {
              "name": "constant.numeric.integer.jello",
              "match": "\\b[0-9]+\\b"
            },
            {
              "name": "variable.other.jello",
              "match": "[a-zA-Z_][a-zA-Z0-9_]*"
            }
          ]
        },
        {
          "name": "string.other.bitstring.binary.jello",
          "begin": "<<",
          "end": ">>",
          "patterns": [
            {
              "name": "constant.numeric.integer.jello",
              "match": "\\b[0-9]+\\b"
            }
          ]
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.definition.map.jello",
          "match": "%\\{"
        },
        {
          "name": "punctuation.separator.jello",
          "match": "[,;.]"
        },
        {
          "name": "punctuation.section.braces.jello",
          "match": "[{}]"
        },
        {
          "name": "punctuation.section.brackets.jello",
          "match": "[\\[\\]]"
        },
        {
          "name": "punctuation.section.parens.jello",
          "match": "[()]"
        },
        {
          "name": "keyword.operator.match-arm.jello",
          "match": "\\|"
        }
      ]
    }
  }
}
